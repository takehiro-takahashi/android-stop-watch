<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00:00"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:textSize="60sp" android:id="@+id/timeText"/>
    <Button
            android:text="START"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:id="@+id/startButton" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/timeText"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            app:layout_constraintEnd_toStartOf="@+id/stopButton" android:layout_marginEnd="32dp"/>
    <Button
            android:text="STOP"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/stopButton" android:layout_marginStart="32dp" android:layout_marginEnd="32dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/timeText"/>
    <Button
            android:text="RESET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/resetButton" android:layout_marginStart="32dp"
            app:layout_constraintStart_toEndOf="@+id/stopButton"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/timeText"/>

</android.support.constraint.ConstraintLayout>